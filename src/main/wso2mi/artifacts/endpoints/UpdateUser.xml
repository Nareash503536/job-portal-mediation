<?xml version="1.0" encoding="UTF-8"?>
<endpoint name="UpdateUser" xmlns="http://ws.apache.org/ns/synapse">
    <http method="put" uri-template="http://127.0.0.1:5000/users/{uri.var.user_id}">
        <suspendOnFailure>
            <initialDuration>-1</initialDuration>
            <progressionFactor>1</progressionFactor>
        </suspendOnFailure>
        <markForSuspension>
            <retriesBeforeSuspension>0</retriesBeforeSuspension>
        </markForSuspension>
    </http>
</endpoint>
